---
const { id, title } = Astro.props as {
  id: string;
  title?: string;
};
---

<dialog
  id={id}
  class="modal rounded-2xl p-0 w-[min(900px,92vw)]
         border border-slate-200 bg-white text-slate-900
         shadow-2xl
         dark:border-slate-800 dark:bg-slate-950 dark:text-slate-100"
>
  <div class="flex items-center justify-between gap-4 px-6 py-4 border-b border-slate-200 dark:border-slate-800">
    <h3 class="text-base font-semibold">{title}</h3>

    <button
      type="button"
      class="rounded-lg border border-slate-200 px-3 py-1.5 text-sm
             hover:bg-slate-50
             dark:border-slate-800 dark:hover:bg-slate-900"
      onclick={`document.getElementById('${id}')?.close()`}
    >
      Cerrar
    </button>
  </div>

  <div class="px-6 py-5">
    <slot />
  </div>
</dialog>

<style>
  .modal::backdrop {
    background: rgba(2, 6, 23, 0.55);
    backdrop-filter: blur(6px);
  }

  .modal:focus {
    outline: none;
  }
</style>
