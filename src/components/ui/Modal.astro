---
const { id, title } = Astro.props as { id: string; title?: string };
---

<dialog
  id={id}
  class="backdrop:bg-black/60 rounded-xl p-0 w-[min(92vw,900px)]"
>
  <div class="bg-white rounded-xl overflow-hidden border border-slate-200">
    <div class="flex items-center justify-between gap-4 px-4 py-3 border-b border-slate-200">
      <p class="text-sm font-medium text-slate-900">
        {title ?? "Vista previa"}
      </p>

      <button
        type="button"
        class="rounded-lg border border-slate-200 px-3 py-1.5 text-sm hover:bg-slate-50"
        onclick={`document.getElementById('${id}')?.close()`}
      >
        Cerrar
      </button>
    </div>

    <div class="p-4">
      <slot />
    </div>
  </div>
</dialog>
