---
import Modal from "./ui/Modal.astro";

type Course = {
  type?: string;
  title: string;
  provider: string;
  date?: string;
  skills?: string[];
  image?: string;
  link?: string;
};

const { course } = Astro.props as { course: Course };

const modalId = `cert-${course.title.replace(/[^a-z0-9]+/gi, "-").toLowerCase()}`;
---

<article
  class="rounded-xl border border-slate-200 bg-white p-5
         transition
         hover:-translate-y-0.5 hover:shadow-lg hover:shadow-black/5
         dark:border-slate-800 dark:bg-slate-950
         dark:hover:shadow-black/20"
>
  {course.type && (
    <p class="text-xs text-slate-500 dark:text-slate-400">
      {course.type}
    </p>
  )}

  <h3 class="mt-1 font-semibold">
    {course.title}
  </h3>

  <p class="mt-1 text-sm text-slate-600 dark:text-slate-300">
    {course.provider}{course.date ? ` Â· ${course.date}` : ""}
  </p>

  <div class="mt-3 flex flex-wrap gap-2">
    {course.skills?.map((s: string) => (
      <span
        class="rounded-full bg-slate-100 px-2 py-1 text-xs text-slate-700
               transition hover:-translate-y-0.5
               dark:bg-slate-900 dark:text-slate-200
               dark:border dark:border-slate-800"
      >
        {s}
      </span>
    ))}
  </div>

  <div class="mt-4 flex flex-wrap gap-2">
    {course.link && (
      <a
        href={course.link}
        target="_blank"
        rel="noreferrer"
        title="Ver certificado"
        aria-label="Ver certificado"
          class="inline-flex h-10 w-10 items-center justify-center rounded-lg
                 border border-slate-200 bg-white text-slate-700
                 transition
                 hover:scale-105 hover:bg-slate-50 active:scale-95
                 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-200
                 dark:hover:bg-slate-900"
      >
        ğŸ”—
      </a>
    )}

    {course.image && (
      <>
        <button
          type="button"
          title="Vista previa"
          aria-label="Vista previa del certificado"
          class="inline-flex h-10 w-10 items-center justify-center rounded-lg
                 border border-slate-200 bg-white text-slate-700
                 transition
                 hover:scale-105 hover:bg-slate-50 active:scale-95
                 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-200
                 dark:hover:bg-slate-900"
          onclick={`document.getElementById('${modalId}')?.showModal()`}
        >
          ğŸ‘ï¸
        </button>

        <Modal id={modalId} title={course.title}>
          <img
            src={course.image}
            alt={`Certificado: ${course.title}`}
            class="w-full rounded-lg border border-slate-200 dark:border-slate-800"
            loading="lazy"
          />
        </Modal>
      </>
    )}
  </div>
</article>
