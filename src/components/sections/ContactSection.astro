---
type Lang = "es" | "en";

const { lang = "en" } = Astro.props as { lang?: Lang };

const text = {
  es: {
    title: "Contacto",
    description:
      "Si quieres hablar de proyectos, oportunidades o colaboración, escríbeme.",
    email: "Enviar correo",
  },
  en: {
    title: "Contact",
    description:
      "If you want to talk about projects, opportunities, or collaboration, feel free to reach out.",
    email: "Send email",
  },
};

const t = text[lang];
---

<section id="contact" class="py-10">
  <h2 class="text-2xl font-semibold tracking-tight">
    {t.title}
  </h2>

  <p class="mt-3 max-w-2xl text-slate-600 dark:text-slate-300">
    {t.description}
  </p>

  <div class="mt-6 flex flex-wrap gap-3">
    <a
      href="mailto:christophermarrero35@gmail.com"
      class="rounded-lg border border-slate-200 px-4 py-2 text-sm
             transition hover:bg-slate-50
             dark:border-slate-800 dark:hover:bg-slate-900"
    >
      {t.email}
    </a>

    <a
      href="https://www.linkedin.com/in/christopher-e-marrero-l-9168a326b/"
      target="_blank"
      rel="noreferrer"
      class="rounded-lg border border-slate-200 px-4 py-2 text-sm
             transition hover:bg-slate-50
             dark:border-slate-800 dark:hover:bg-slate-900"
    >
      LinkedIn
    </a>

    <a
      href="https://github.com/ChristopherMarreroL"
      target="_blank"
      rel="noreferrer"
      class="rounded-lg border border-slate-200 px-4 py-2 text-sm
             transition hover:bg-slate-50
             dark:border-slate-800 dark:hover:bg-slate-900"
    >
      GitHub
    </a>
  </div>
</section>
