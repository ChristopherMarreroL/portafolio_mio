---
import type { Lang } from "../../i18n/translations";
import { t } from "../../i18n/translations";

const { lang = "en" } = Astro.props as { lang?: Lang };
const tr = t[lang];
---

<section class="py-10">
  <p class="mt-4 max-w-2xl text-base text-slate-600 dark:text-slate-300">{tr.hero.hi}</p>

  <h1 class="mt-2 text-4xl font-bold tracking-tight sm:text-5xl">
    Christopher
  </h1>

  <p class="mt-4 max-w-2xl text-base text-slate-600 dark:text-slate-300">
    {tr.hero.subtitle}
  </p>
</section>
